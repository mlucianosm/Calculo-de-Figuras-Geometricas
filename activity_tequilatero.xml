<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TEquilatero">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Triangulo Equilatero"
        android:layout_marginLeft="120sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese Valores"
        android:layout_marginLeft="10sp" />

    <EditText
        android:id="@+id/etLado1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Lado A"
        android:layout_marginLeft="10sp" />

    <EditText
        android:id="@+id/etLado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:hint="Lado B"
        android:layout_marginLeft="10sp" />

    <EditText
        android:id="@+id/etLado3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:hint="Lado C"
        android:layout_marginLeft="10sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tipo de Calculo" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/rbPerimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perimetro"
            android:textColor="#B43940"
            android:layout_marginLeft="10sp" />

        <RadioButton
            android:id="@+id/rbArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="#B43940"
            android:layout_marginLeft="10sp" />

        <RadioButton
            android:id="@+id/rbSemiperimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semi Perimetro"
            android:textColor="#B43940"
            android:layout_marginLeft="10sp" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULAR"
            android:background="#B43940"
            android:textColor="#ffffff"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>
    </RadioGroup>

</LinearLayout>