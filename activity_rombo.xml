<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cuadrado">
    <TextView
        android:id="@+id/tvRombo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rombo" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/rombo" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Rombo" />

    <EditText
        android:id="@+id/etLado1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Valor Diagonal Mayor" />

    <EditText
        android:id="@+id/etLado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Valor Diagonal Menor" />



    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Calcular" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/rbPerimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perimetro" />

        <RadioButton
            android:id="@+id/rbArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area" />


        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULAR" />
    </RadioGroup>
</LinearLayout>