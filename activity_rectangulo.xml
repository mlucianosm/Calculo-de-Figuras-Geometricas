<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Rectangulo">
    <TextView
        android:id="@+id/tvRectangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rectangulo"
        android:layout_marginLeft="150sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/rectangulo"
        android:layout_marginLeft="140sp" />



    <EditText
        android:id="@+id/etLado1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Valor Lado 1"
        android:layout_marginLeft="10sp" />

    <EditText
        android:id="@+id/etLado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Valor Lado 2"
        android:layout_marginLeft="10sp" />

    <EditText
        android:id="@+id/etLado3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:hint="Valor Lado 3"
        android:layout_marginLeft="10sp" />

    <EditText
        android:id="@+id/etLado4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:hint="Valor Lado 4"
        android:layout_marginLeft="10sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tipo de Calculo" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/rbPerimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perimetro"
            android:textColor="#B43940"
            android:layout_marginLeft="10sp" />

        <RadioButton
            android:id="@+id/rbArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="#B43940"
            android:layout_marginLeft="10sp" />

        <RadioButton
            android:id="@+id/rbDiagonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagonal"
            android:textColor="#B43940"
            android:layout_marginLeft="10sp" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULAR"
            android:background="#B43940"
            android:textColor="#ffffff"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>
    </RadioGroup>
</LinearLayout>