<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Triangulos">

    <TextView
        android:id="@+id/tvTriangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Triangulos" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/triangulo" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Triangulo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elija tipo de Triangulo" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbEquilatero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equilatero" />

        <RadioButton
            android:id="@+id/rbIsocele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isocele" />

        <RadioButton
            android:id="@+id/rbEscaleno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escaleno" />
    </RadioGroup>

    <Button
        android:id="@+id/btnElegir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ELEGIR" />

    <EditText
        android:id="@+id/etLado1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:hint="Lado A" />

    <EditText
        android:id="@+id/etLado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:hint="Lado B" />

    <EditText
        android:id="@+id/etLado3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:hint="Lado C" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Calcular" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/rbPerimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perimetro" />

        <RadioButton
            android:id="@+id/rbArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area" />

        <RadioButton
            android:id="@+id/rbSemiperimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semi Perimetro" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULAR" />
    </RadioGroup>
</LinearLayout>